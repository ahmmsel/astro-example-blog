---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import error from "../images/error-404.png"
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center gap-6 my-10">
    <Image 
      src={error}
      alt="Page Not Found"
      width={250}
    />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="text-2xl">Sorry, this page doesn't exist</p>
  </div>
</MainLayout>